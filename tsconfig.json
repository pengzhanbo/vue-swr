{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ES2020",
    "declaration": true,
    "lib": ["DOM", "ES2020"],
    "target": "ES2018",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "newLine": "lf",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "declarationMap": false,
    "paths": {
      "vue-swr": ["./src/index.ts"]
    }
  },
  "include": ["./src", "./example"],
  "exclude": ["node_modules", "dist"]
}
